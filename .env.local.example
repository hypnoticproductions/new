# SafeTravel Monitor Environment Variables
# Copy this file to .env.local and fill in your values

# Supabase Configuration
# Get these from your Supabase project settings
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# GDELT API (Optional - using mock data by default)
# The GDELT Project provides free access to their API
# https://www.gdeltproject.org/
GDELT_API_KEY=

# Analytics (Optional)
NEXT_PUBLIC_GA_ID=

# Email Service (Optional - for alert notifications)
SMTP_HOST=
SMTP_PORT=
SMTP_USER=
SMTP_PASSWORD=
EMAIL_FROM=

# App Configuration
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_APP_NAME=SafeTravel Monitor

# Feature Flags
ENABLE_REAL_GDELT=false
ENABLE_EMAIL_ALERTS=false
ENABLE_PUSH_NOTIFICATIONS=false
